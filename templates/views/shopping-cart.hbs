{{#if products}}
    <div class="row m-auto">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3 m-auto">
            <ul class="list-group">
                {{#each products}}
                    <li class="list-group-item">
                    <strong>{{this.item.title}}</strong>
                    <span class="label label-success">${{this.price}}</span>
                    <div class="btn-group">
                        <button class="btn btn-primary btn-xs dropdown-toggle dropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                            <li class="dropdown-item"><a href="">-1</a></li>
                            <li class="dropdown-item"><a href="">Reduce all</a></li>
                        </ul>
                    </div>
                    <span class="badges float-right">{{this.qty}}</span>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6  m-auto">
            <strong>Total: ${{totalPrice}} </strong>
        </div>
    </div> 
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 m-auto">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>  
{{else}}
    <div class="row">
        <div class="col-sm-6 col-md-6">
            <h2>No items in cart.</h2>
        </div>
    </div>
{{/if}}