<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>User Profile</h1>
        <hr>
        <h2>My orders</h2>
        {{#if orders}}
            {{#each orders}}
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                        {{#each this.items}}
                            <li class="list-group-item">
                                <span class="badges bg-secondary float-right">${{this.price}}</span>
                                {{this.item.title}} | {{this.qty}}
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer">
                    <strong>Total Price: ${{this.cart.totalPrice}}</strong>
                </div>
            </div>
        {{/each}}
        {{else}}
        <h3>No orders history</h3>
        {{/if}}
    </div>
</div>